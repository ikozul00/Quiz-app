<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/username_bacground">


    <TextView
        android:id="@+id/usernameMsg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/roboto_slab_bold"
        android:text="@string/enter_username"
        android:textColor="#FFFFFF"
        android:textSize="30sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.495"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.258" />

    <EditText
        android:id="@+id/usernameInput"
        android:layout_width="304dp"
        android:layout_height="58dp"
        android:layout_marginBottom="428dp"
        android:autofillHints="admin"
        android:background="@drawable/edt_unos"
        android:inputType="text"
        android:padding="15dp"
        android:text="@string/korisni_ko_ime"
        android:textColor="#000f23"
        android:drawablePadding="12dp"
        android:drawableStart="@drawable/ic_baseline_account_circle_24"
        android:drawableTint="@color/black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.523"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:ignore="LabelFor" />

    <Button
        android:id="@+id/nextButton"
        android:layout_width="127dp"
        android:layout_height="79dp"
        android:layout_marginTop="64dp"
        android:layout_marginRight="50dp"
        android:background="@drawable/corner_button"
        android:onClick="onClickButtonNext"
        android:text="Dalje"
        android:textSize="18sp"
        app:layout_constraintHorizontal_bias="0.606"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/usernameInput" />


</androidx.constraintlayout.widget.ConstraintLayout>