<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/username_bacground">

    <TextView
        android:id="@+id/congratsLabel"
        android:layout_width="309dp"
        android:layout_height="130dp"
        android:fontFamily="sans-serif-condensed-medium"
        android:text=""
        android:textColor="@color/white"
        android:textSize="40sp"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.131" />

    <TextView
        android:id="@+id/oneResultLabel"
        android:layout_width="273dp"
        android:layout_height="114dp"
        android:text=""
        android:textSize="35sp"
        android:fontFamily="sans-serif-condensed-medium"
        android:textColor="@color/ljubicasta"
        android:gravity="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/congratsLabel"
        app:layout_constraintVertical_bias="0.296" />


    <Button
        android:id="@+id/highScoresButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oneResultLabel"
        app:layout_constraintRight_toRightOf="parent"
        android:text="High Scores"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="@drawable/corner_button"
        android:layout_marginRight="50dp"
        android:onClick="onClickScoreBoardButton"
        />

    <Button
        android:id="@+id/newGameButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/oneResultLabel"
        app:layout_constraintLeft_toLeftOf="parent"
        android:text="New Game"
        android:textColor="@color/white"
        android:fontFamily="sans-serif-condensed-medium"
        android:background="@drawable/corner_button"
        android:layout_marginRight="50dp"
        android:onClick="onClickNewGameButton"
        />


</androidx.constraintlayout.widget.ConstraintLayout>